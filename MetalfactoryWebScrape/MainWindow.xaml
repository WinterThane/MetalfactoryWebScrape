<Window x:Class="MetalfactoryWebScrape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetalfactoryWebScrape"
        mc:Ignorable="d" Width="1920" Height="1080"
        Title="Metalfactory Web Scrape" WindowState="Maximized">
    
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Make ICS file" Width="100" Height="30" Margin="10" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Click="Make_File_Button_Click" />
        
        <TextBlock Grid.Row="0" Text="Metalfactory.ch web scraper" HorizontalAlignment="Center" VerticalAlignment="Center" />
        
        <TextBox Grid.Row="1" Name="reportText" FontWeight="Bold" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>
